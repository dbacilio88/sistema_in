{
  "name": "traffic-system-e2e-tests",
  "version": "1.0.0",
  "description": "End-to-End tests for Traffic Violation Detection System",
  "scripts": {
    "test": "playwright test",
    "test:headed": "playwright test --headed",
    "test:debug": "playwright test --debug",
    "test:ui": "playwright test --ui",
    "test:report": "playwright show-report",
    "test:install": "playwright install",
    "test:docker": "docker-compose -f docker-compose.test.yml up --abort-on-container-exit",
    "test:ci": "playwright test --reporter=github",
    "test:coverage": "playwright test --reporter=html --output=coverage"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@types/node": "^20.0.0",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "axios": "^1.6.0",
    "dotenv": "^16.3.0"
  }
}