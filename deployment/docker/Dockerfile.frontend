# Multi-stage build para Frontend React
FROM node:18-alpine AS builder

# Configurar directorio de trabajo
WORKDIR /app

# Copiar package files
COPY frontend-dashboard/package*.json ./
COPY config-management/web/package*.json ./web/

# Instalar dependencias
RUN npm ci --only=production

# Copiar c贸digo fuente
COPY frontend-dashboard/ .
COPY config-management/web/ ./web/

# Build de producci贸n
RUN npm run build
RUN cd web && npm ci --only=production && npm run build

# Etapa de producci贸n con Nginx
FROM nginx:alpine

# Instalar curl para health checks
RUN apk add --no-cache curl

# Copiar archivos de build
COPY --from=builder /app/dist /usr/share/nginx/html/dashboard
COPY --from=builder /app/web/dist /usr/share/nginx/html/config

# Configuraci贸n personalizada de Nginx
COPY deployment/docker/nginx.conf /etc/nginx/nginx.conf
COPY deployment/docker/default.conf /etc/nginx/conf.d/default.conf

# Crear usuario no-root
RUN addgroup -g 1001 -S nginxuser && \
    adduser -S -D -H -u 1001 -h /var/cache/nginx -s /sbin/nologin -G nginxuser -g nginxuser nginxuser

# Cambiar permisos
RUN chown -R nginxuser:nginxuser /usr/share/nginx/html && \
    chown -R nginxuser:nginxuser /var/cache/nginx && \
    chown -R nginxuser:nginxuser /var/log/nginx && \
    chown -R nginxuser:nginxuser /etc/nginx/conf.d

RUN touch /var/run/nginx.pid && \
    chown -R nginxuser:nginxuser /var/run/nginx.pid

# Cambiar a usuario no-root
USER nginxuser

# Exponer puerto
EXPOSE 3000

# Health check
HEALTHCHECK --interval=30s --timeout=30s --start-period=5s --retries=3 \
    CMD curl -f http://localhost:3000/ || exit 1

# Comando por defecto
CMD ["nginx", "-g", "daemon off;"]