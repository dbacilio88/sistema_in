# FastAPI Inference Service Environment Variables

# Application
APP_NAME=Traffic Inference Service
VERSION=1.0.0
DEBUG=false
API_V1_STR=/api
HOST=0.0.0.0
PORT=8001
WORKERS=1

# Database
DATABASE_URL=postgresql+asyncpg://admin:SecurePassword123!@postgres:5432/traffic_system

# Redis
REDIS_URL=redis://redis:6379/0

# RabbitMQ
RABBITMQ_URL=amqp://admin:SecurePassword123!@rabbitmq:5672/

# MinIO/S3
MINIO_ENDPOINT=minio:9000
MINIO_ACCESS_KEY=admin
MINIO_SECRET_KEY=SecurePassword123!
MINIO_BUCKET=traffic-evidence
MINIO_SECURE=false

# Video Processing
MAX_CONCURRENT_STREAMS=10
FRAME_BUFFER_SIZE=30
RTSP_TIMEOUT=30

# Django Backend API (IMPORTANTE: usar localhost en desarrollo)
DJANGO_API_URL=http://localhost:8000
DJANGO_API_TIMEOUT=30

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=console

# Security
SECRET_KEY=your-secret-key-change-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=30