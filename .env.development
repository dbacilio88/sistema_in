# Development Environment Configuration
# Copy this file to .env for local development

# ==================================
# DATABASE CONFIGURATION
# ==================================
DATABASE_URL=postgresql://admin:SecurePassword123!@localhost:5432/traffic_system
DB_HOST=localhost
DB_PORT=5432
DB_NAME=traffic_system
DB_USER=admin
DB_PASSWORD=SecurePassword123!

# ==================================
# REDIS CONFIGURATION
# ==================================
REDIS_URL=redis://localhost:6379/0
REDIS_HOST=localhost
REDIS_PORT=6379

# ==================================
# FASTAPI INFERENCE SERVICE
# ==================================
INFERENCE_SERVICE_URL=http://localhost:8001
INFERENCE_API_KEY=dev-api-key

# ==================================
# DJANGO SERVICE
# ==================================
DJANGO_SERVICE_URL=http://localhost:8000
DJANGO_SECRET_KEY=traffic-system-dev-secret-key-2025-very-long-and-secure
DJANGO_DEBUG=True
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0

# ==================================
# DEVELOPMENT SETTINGS
# ==================================
# Enable development tools
DJANGO_TOOLBAR_ENABLED=True
SILK_ENABLED=True

# Logging for development
LOG_LEVEL=DEBUG
LOG_FORMAT=console

# Quick seed data creation
DJANGO_AUTO_MIGRATE=True
DJANGO_LOAD_SEED_DATA=True

# ==================================
# TESTING CAMERA CONFIGURATION
# ==================================
# Test RTSP streams (using public test streams)
TEST_RTSP_URL_1=rtsp://admin:admin123@192.168.1.100:554/h264/ch1/main/av_stream
TEST_RTSP_URL_2=rtsp://admin:admin123@192.168.1.101:554/h264/ch1/main/av_stream

# For testing without real cameras, use file-based streams
TEST_VIDEO_FILE_1=/app/test_data/traffic_video_1.mp4
TEST_VIDEO_FILE_2=/app/test_data/traffic_video_2.mp4

# ==================================
# DEVELOPMENT DOCKER SERVICES
# ==================================
# When running with docker-compose, these services are automatically available
POSTGRES_CONTAINER=traffic-postgres
REDIS_CONTAINER=traffic-redis
RABBITMQ_CONTAINER=traffic-rabbitmq
MINIO_CONTAINER=traffic-minio